<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_tab"
        app:startDestination="@id/mainTabFragment">

    <fragment
            android:id="@+id/mainTabFragment"
            android:name="com.example.sass.presentation.screens.tabs.main.MainFragment"
            android:label="main_tab_fragment"
            tools:layout="@layout/main_fragment" >
        <action
                android:id="@+id/action_mainTabFragment_to_searchFragment"
                app:destination="@id/searchFragment"
                app:launchSingleTop="true" />
        <action
                android:id="@+id/action_mainTabFragment_to_pictureDetailFragment"
                app:destination="@id/pictureDetailFragment"
                app:launchSingleTop="true" />
    </fragment>
    <fragment
            android:id="@+id/searchFragment"
            android:name="com.example.sass.presentation.screens.tabs.search.SearchFragment"
            android:label="search_fragment"
            tools:layout="@layout/search_fragment" />
    <fragment
            android:id="@+id/pictureDetailFragment"
            android:name="com.example.sass.presentation.screens.tabs.detail.PictureDetailFragment"
            android:label="post_detail_fragment"
            tools:layout="@layout/picture_detail_fragment" >
        <argument
                android:name="pictureId"
                app:argType="string" />
    </fragment>
</navigation>