<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_graph"
        app:startDestination="@id/signInFragment">

    <fragment
            android:id="@+id/signInFragment"
            android:name="com.example.sass.presentation.screens.auth.SignInFragment"
            android:label="sing_in_fragment"
            tools:layout="@layout/sing_in_fragment">
        <action
                android:id="@+id/action_signInFragment_to_tabsFragment"
                app:destination="@id/tabsFragment"
                app:popUpTo="@id/signInFragment"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/tabsFragment"
            android:name="com.example.sass.presentation.screens.tabs.TabsFragment"
            android:label="tabs_fragment"
            tools:layout="@layout/tabs_fragment" >
        <action
                android:id="@+id/action_tabsFragment_to_signInFragment"
                app:destination="@id/signInFragment"
                app:popUpTo="@id/tabsFragment"
                app:popUpToInclusive="true" />
    </fragment>
</navigation>