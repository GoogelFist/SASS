<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ProgressBar
            android:id="@+id/progress_bar_loading_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:layout_marginVertical="12dp"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_loading_button"
            app:layout_constraintEnd_toEndOf="@id/tv_loading_button"
            app:layout_constraintStart_toStartOf="@id/tv_loading_button"
            app:layout_constraintTop_toTopOf="@id/tv_loading_button" />

    <TextView
            android:id="@+id/tv_loading_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="19dp"
            android:paddingTop="11dp"
            android:paddingEnd="16dp"
            android:paddingBottom="13dp"
            android:textAppearance="@style/Text.MontserratSemiBold.16.White"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Text"/>

</merge>