<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/search_box_background_color</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="boxStrokeErrorColor">@color/edit_text_error_text_color</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextAppearance">@style/Text.MontserratMedium.12</item>
        <item name="hintTextColor">@color/edit_text_hint_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/edit_text_error_text_color</item>
        <item name="errorTextAppearance">@style/Text.MontserratRegular.12</item>
    </style>

    <style name="DefaultTextInputEditText">
        <item name="android:textAppearance">@style/Text.MontserratMedium.16.Black</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/snack_error_background_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/Text.MontserratMedium.14.White</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:lineSpacingExtra">20sp</item>
    </style>

    <style name="Widget.ButtonTheme" parent="android:Widget">
        <item name="android:background">@drawable/buttons_background</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:textAppearance">@style/Text.MontserratSemiBold.16.White</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

</resources>